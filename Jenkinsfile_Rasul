pipeline {
    // Используем 'agent none' глобально
    agent none 

    // Определяем переменные
    environment {
        // Мы все равно определяем имя образа для локальной сборки
        DOCKER_IMAGE = 'aviciig/python-devops:latest' 
        DOCKERFILE_NAME = 'Dockerfile_Rasul'
    }

    stages {
        stage('Build Setup (Python Lint)') {
            steps {
                echo 'Starting Python syntax check inside Python container...'
                // Шаг 1: Проверка синтаксиса Python внутри временного контейнера
                script {
                    docker.image('python:3.9-slim').inside { 
                        sh 'python3 -m py_compile app.py'
                        echo 'Python syntax check passed.'
                    }
                }
            }
        }
        
        stage('Docker Build') {
            // Шаг 2: Сборка Docker-образа на хосте
            agent any
            steps {
                echo 'Building Docker image...'
                // Команда сборки образа с указанием вашего именованного Dockerfile
                sh "docker build -f ${DOCKERFILE_NAME} -t ${DOCKER_IMAGE} ."
                echo "Image ${DOCKER_IMAGE} built successfully locally."
            }
        }
        
        stage('Deploy Simulation') {
            // Шаг 3: Имитация деплоя
            agent any
            steps {
                echo 'Skipping Push to Docker Hub, proceeding to Deploy Simulation...'
                echo 'Simulating deployment to Kubernetes using kubectl apply...'
            }
        }
    }
}